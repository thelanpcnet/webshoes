<section class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center userForm">

            <div class="col-xl-10 col-lg-12 col-md-9 my-5">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">

                                    <div class="text-center">
                                        <h1 class="h4 mb-4"><b>
                                            <%= title%>
                                        </b></h1>
                                    </div>
                                    <%-include("./partials/message")%>
                                        <form class="user" action="/login" method="POST">

                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" name="email" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="password" id="password" class="form-control form-control-user" placeholder="Mật khẩu">
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                            <hr>
                                            <div class="text-center">
                                                <p><i style="font-size: 12px;">Chưa có tài khoản?</i><a class="small" href="/register"> Đăng kí</a></p>
                                            </div>
                                            <!-- <p class="text-center"><i>Đã có tài khoản?</i> <a href="/login">Đăng nhập</a></p> -->
                                            <!-- <a href="index.html" class="btn btn-google btn-user btn-block">
                                                <i class="fab fa-google fa-fw"></i> Login with Google
                                            </a>
                                            <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                                <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                            </a> -->
                                        </form>
                                        <div class="text-center">
                                            <a href="/" class="btn btn-danger btn-user px-4">Trở lại</a>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</section>